<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: movies_path, method: :get, class: "d-flex my-5" do %>
        <%= text_field_tag :q,
            params[:q],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
        <%#= text_field_tag :category,
            params[:category],
            class: "form-control",
            placeholder: "Type a category"
        %>
        <%#= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "Type a location"
        %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
      <div id="movies">
        <% if @movies.any? %>
          <% @movies.each do |movie| %>
            <h4><%= movie.title %></h4>
            <p><%= movie.synopsis %></p>
          <% end %>
        <% else %>
          <em>Sorry, no movies found.</em>
        <% end %>
      </div>
    </div>
  </div>